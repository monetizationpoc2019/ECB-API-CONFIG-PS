<?xml version="1.0" encoding="utf-8"?>
<xmlconfig>
	<DataMartDB>
		<Size>5</Size>  <!-- should be a whole number greater than 0, size is in MB -->

		<!-- MSSQL server -->
		<FilePath>C:\Program Files\Microsoft SQL Server\MSSQL13.MSSQLSERVER\MSSQL\DATA</FilePath>

		<!-- Oracle unix -->
		<!--FilePath>/u01/app/oracle/oradata/netmeter</FilePath-->

		<!-- Oracle windows -->
		<!--FilePath>C:\ORACLE\PRODUCT\10.2.0\ORADATA\PLUTO</FilePath-->

		<!-- name is in the ReportConfig.xml -->
	</DataMartDB>

	<!-- Supported report types: Interval, BillingGroup, Account -->
	<ReportType>Account</ReportType>

  <GenerateSchemaQueryPath>SqlCore\queries\GenerateSchemaQueries</GenerateSchemaQueryPath>

  <!-- Use the following query files for Account or BillingGroup report type -->
  <PopulateQueryPath>SqlCore\queries\PopulateQueries</PopulateQueryPath>

  <ReverseAdapterQueryPath>SqlCore\queries\ReverseDatamartAdapter</ReverseAdapterQueryPath>

  <SplitReverseAdapterQueryPath>SqlCore\Queries\SplitReverseDatamartAdapter</SplitReverseAdapterQueryPath>

  <!-- Use the following query files for Interval report type -->

  <!-- PopulateQueryPath>SqlCore\Queries\PopulateQueriesInterval</PopulateQueryPath -->
  <!-- ReverseAdapterQueryPath>SqlCore\Queries\ReverseDatamartAdapterInterval</ReverseAdapterQueryPath -->

</xmlconfig>